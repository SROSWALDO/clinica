// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Paciente {
  id Int @id @default(autoincrement())
  fecha DateTime
  hora String
  nombre String
  telefono String
  consulta String
  doctor String
  radiografias Int
  ambulancia Boolean
  ingresos Int
  egresos Int
  createdAt DateTime @default(now())
}

model Patologia {
  id Int @id @default(autoincrement())
  fecha DateTime
  nombre String
  telefono String
  pieza String
  costo Int
  recibido Boolean
}

model Corte {
  id Int @id @default(autoincrement())
  nombre String
  ingresos String
  totalIngresos Float
  egresos String
  totalEgresos Float
  total Float
  createdAt DateTime @default(now())
}

model Cita {
  id Int @id @default(autoincrement())
  paciente String
  telefono String
  descripcion String
  fecha DateTime
  horaFin DateTime
  createdAt DateTime @default(now())
}
